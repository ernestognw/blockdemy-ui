{
  "name": "blockdemy-ui",
  "version": "0.3.13",
  "description": "Blockdemy design system used across the blockdemy platforms ecosystem",
  "main": "lib/index.js",
  "homepage": "http://ui.blockdemy.com/",
  "scripts": {
    "prepublish": "yarn build",
    "prepare": "babel-node scripts/prepare.js",
    "postpublish": "scripts/post-publish.js",
    "build": "yarn clean && webpack --mode production",
    "dev": "yarn clean && webpack --mode production --watch",
    "clean": "rimraf lib",
    "lint": "eslint",
    "prettier": "prettier --write \"**/*.{js,graphql,json,css}\""
  },
  "keywords": [
    "design",
    "system",
    "ui",
    "components",
    "react"
  ],
  "author": "Ernesto GarcÃ­a",
  "license": "MIT",
  "peerDependencies": {
    "react": ">=16.10.2",
    "react-dom": ">=16.10.2",
    "styled-components": ">=4.4.0"
  },
  "dependencies": {
    "@styled-system/prop-types": "^5.1.4",
    "copy-to-clipboard": "^3.3.1",
    "prop-types": "^15.7.2",
    "react-animate-height": "^2.0.20",
    "react-icons": "^3.9.0",
    "styled-system": "^5.1.2"
  },
  "husky": {
    "hooks": {
      "pre-push": "yarn lint .",
      "pre-commit": "yarn prettier ."
    }
  }
}
